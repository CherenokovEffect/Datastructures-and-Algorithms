{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ (auto bin)",
            "type": "shell",
            "command": "mkdir \"${fileDirname}\\bin\" 2>nul && g++ -g \"${file}\" -o \"${fileDirname}\\bin\\${fileBasenameNoExtension}.exe\"",
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
